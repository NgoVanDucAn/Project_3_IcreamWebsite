@using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> SignInManager
@inject UserManager<Users> UserManager


@if (SignInManager.IsSignedIn(User))
{
        @*<form method="post" action="UserDetails/@UserManager.GetUserId(User)">
            <button type="submit" class="nav-link btn btn-link text-white pl-3">Hello @User.Identity?.Name!</button>
        </form>*@

        <a class="text-white px-3" asp-controller="Home" asp-action="UserDetails" asp-route-id="@UserManager.GetUserId(User)" title="Manage">Hello @User.Identity?.Name!</a>
        <span class="text-white">|</span>
   
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
              <button  type="submit" class="nav-link btn btn-link text-white pl-3">Logout</button>
        </form>
    
                        
}
else
{
    
    <a class="text-white px-3" asp-area="Identity" asp-page="/Account/Register">Register</a>
    <span class="text-white">|</span>
    <a class="text-white px-3" asp-area="Identity" asp-page="/Account/Login">Login</a>
    
}

