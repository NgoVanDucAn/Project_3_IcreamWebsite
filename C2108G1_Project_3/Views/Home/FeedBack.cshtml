@using C2108G1_Project_3.Repository
@using C2108G1_Project_3.Models
@inject IBooksRepository booksRepository

@{
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
    var books = await booksRepository.GetAllAsync();
}
<!-- Contact Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <h1 class="section-title position-relative text-center mb-5">Contact Us For Any Query</h1>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-9">
                    <div class="contact-form bg-light rounded p-5">
                        <div id="success"></div>
                        <form name="sentMessage" id="contactForm" novalidate="novalidate">
                            <div class="form-row">
                                <div class="col-sm-6 control-group">
                                    <input type="text" class="form-control p-4" id="name" placeholder="Your Name" required="required" data-validation-required-message="Please enter your name" />
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="col-sm-6 control-group">
                                    <input type="email" class="form-control p-4" id="email" placeholder="Your Email" required="required" data-validation-required-message="Please enter your email" />
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="control-group">
                                <input type="text" class="form-control p-4" id="subject" placeholder="Subject" required="required" data-validation-required-message="Please enter a subject" />
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="control-group">
                                <textarea class="form-control p-4" rows="6" id="message" placeholder="Message" required="required" data-validation-required-message="Please enter your message"></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div>
                            <button class="btn btn-primary btn-block py-3 px-5 send" type="submit" data-email="ancorndz@gmail.com" id="sendMessageButton">Send Message</button>
                            </div>
                        
                            <script>
                                // Lấy tất cả các nút nhắn tin trên trang
                                var messageButtons = document.querySelectorAll('.send');

                                // Lặp qua từng nút nhắn tin
                                messageButtons.forEach(function (button) {
                                // Lắng nghe sự kiện nhấp vào nút
                                button.addEventListener('click', function () {
                                // Lấy địa chỉ email từ thuộc tính data-email
                                var email = button.getAttribute('data-email');

                                // Kiểm tra xem trình duyệt có hỗ trợ hộp thoại email không
                                if (window.navigator && window.navigator.msSaveOrOpenBlob) {
                                // Trình duyệt Microsoft Edge hoặc Internet Explorer
                                window.navigator.msSaveOrOpenBlob('mailto:' + email);
                                } else {
                                // Trình duyệt khác
                                window.location.href = 'mailto:' + email;
                                }
                                });
                                });
                            </script>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->